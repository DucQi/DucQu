    <script>
        function checkResults() {
            // Pobierz wybrane odpowiedzi
            var answers = [];
            for (var i = 1; i <= 5; i++) {
                var selectedOption = document.querySelector('input[name="q' + i + '"]:checked');
                if (selectedOption) {
                    answers.push(selectedOption.value);
                }
            }

            // Sprawdź odpowiedzi i wyświetl wyniki
            var correctAnswers = ["a", "a", "a", "a", "c"];
            var correctCount = 0;

            for (var i = 0; i < answers.length; i++) {
                if (answers[i] === correctAnswers[i]) {
                    correctCount++;
                }
            }

            var message = "Wyniki quizu:\nPoprawne odpowiedzi: " + correctCount + "/5";
            alert(message);
        }
    </script>

